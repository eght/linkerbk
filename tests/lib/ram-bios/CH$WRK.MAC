;; vim: set expandtab ai :
;; Установка/чтение режима и переход
;; MODE --- режим
;; ADDR --- адрес
;; Выход:
;; R4 --- код режима до установки нового
;; при MODE <= 0 производится только чтение текущего режима без установки нового,
;; на пережачу управление это не влияет.
                .MACRO  CH$WRK MODE,ADDR
                .IF DIF R0 MODE
                        jsr     R5,@#167734
                        .WORD   MODE,ADDR
                .IFF
                        jsr     R5,@#167734+2
                        .WORD   ADDR
                .ENDC
                .ENDM

